const fs = require('fs');
var a = "this";
var b = "is";
var c = 'a';
var d = "test";


fs.appendFile('foo.txt', a, b, c, d, (err) => {  
    // throws an error, you could also catch it here
    if (err) throw err;

    // success case, the file was saved
    console.log('Lyric saved!');
});

